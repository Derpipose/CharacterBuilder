@using CharacterBuilderShared.Models
@using CharacterBuilderWeb.Services;
@inject IConfiguration Configuration

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">CharacterBuilderWeb</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="players">
                <span class="bi bi-clipboard-plus" aria-hidden="true"></span> Player List
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="makecharacter">
                <span class="bi bi-clipboard-heart" aria-hidden="true"></span> Make Character
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="characters">
                <span class="bi bi-clipboard-heart" aria-hidden="true"></span> Characters
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="secret">
                <span class="bi bi-clipboard-heart" aria-hidden="true"></span> *
            </NavLink>
        </div>
        @if (bloom) {
            <div>
                <!-- Content to show when Bloom is true -->
                <h3>The Bloom is True!</h3>
            </div>
        } else {
            <div>
                <!-- Content to show when Bloom is false -->
                <h3>The Bloom is False!</h3>
            </div>
        }
    </nav>
</div>


@code{
    public bool bloom;

    protected override void OnInitialized() {
    // Accessing the environment variable
        var bloomValue = Configuration["Bloom"];
        if(bloomValue == null) {
            bloomValue = "false";
        }
        // Parse the string value to a boolean
        bloom = bool.Parse(bloomValue);
    }
}


